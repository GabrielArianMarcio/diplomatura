<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="col-sm-10">
            <h4>Modificar la novedad</h4>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" class="form-control" name="id">
                <div class="row mb-3">
                    <input type="text" class="form-control" id="inputUser" placeholder="Titulo"
                        value="{{novedad.titulo}}" name="titulo">
                </div>
                <div class="row mb-3">
                    <input type="text" class="form-control" placeholder="Subtitulo" value="{{novedad.subtitulo}}"
                        name="subtitulo">
                </div>
                <div class="row mb-3">
                    <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo"
                        value="{{novedad.cuerpo}}"></textarea>
                </div>
                <div class="form-group">
                    <p>
                        <label>Imagen: <input type="file" name="imagen" id="imagen"> </label>
                    </p>
                    <p>
                        <label> <input type="checkbox" name="img_delete" id="img_delete" value="1"> Eliminar imagen
                            actual? </label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
        </div>
        {{#if error}}
        <h5> {{message}} </h5>
        {{/if}}
    </div>
</div>