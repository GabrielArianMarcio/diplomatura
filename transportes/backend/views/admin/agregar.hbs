<div class="container" style="margin-top: 100px;">
  <div class="row">
    <h4>Agregar una nueva novedad</h4>
    <form action="/admin/novedades/agregar" method="post">

      <div class="row mb-3">
          <div class="col-sm-10">
          <input type="text" class="form-control" id="inputUser" placeholder="Titulo" name="titulo">
        </div>
      </div>

      <div class="row mb-3">
        
        <div class="col-sm-10">
          <input type="password" class="form-control" id="inputPassword" placeholder="Subtitulo" name="subtitulo">
        </div>
      </div>

            <div class="row mb-3">
                <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo"></textarea>
            </div>
      <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
    {{#if error}}
    <p> {{message}} </p>
    {{/if}}
  </div>
</div>