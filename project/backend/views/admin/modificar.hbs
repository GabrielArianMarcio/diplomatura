<div class="container" style="margin-top: 100px;">
<div class="row">
    <h4>Modificar la novedad</h4>
    <form action="/admin/novedades/modificar" method="post">
        <input type="hidden" value="{{novedad.id}}" class="form-control" name="id">
        <div class="row mb-3">
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputUser" placeholder="Titulo" value="{{novedad.titulo}}"
                    name="titulo">
            </div>
        </div>

        <div class="row mb-3">

            <div class="col-sm-10">
                <input type="text" class="form-control" placeholder="Subtitulo" value="{{novedad.subtitulo}}"
                    name="subtitulo">
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-10">
                <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo"
                    value="{{novedad.cuerpo}}"></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Modificar</button>
    </form>
    {{#if error}}
    <h5> {{message}} </h5>
    {{/if}}
</div>
</div>